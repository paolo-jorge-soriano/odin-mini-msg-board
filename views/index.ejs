<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/index.css" />
    <title><%= title %></title>
  </head>
  <body>
    <div class="app">
      <header class="header">
        <h1 class="title">Messages</h1>
        <a href="/new" class="btn-new-msg">+</a>
      </header>

      <main class="message-container">
        <!-- Display recent message first -->
        <% for (let i = messages.length - 1; i >= 0; i--) { %>
        <a href="/message/<%= i %>" class="card-link">
          <div class="card">
            <div class="left-container">
              <img src="/images/profile-icon.png" alt="profile-picture" class="profile-picture" />
              <div class="message-text">
                <h3><%= messages[i].user %></h3>
                <p><%= messages[i].text %></p>
              </div>
            </div>

            <div class="right-container">
              <p><%= messages[i].added.toLocaleString() %></p>
            </div>
          </div>
        </a>
        <% } %>
      </main>
    </div>
  </body>
</html>
