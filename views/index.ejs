<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/index.css" />
    <title>Home</title>
  </head>
  <body>
    <div class="app">
      <h1 class="title"><%= title %></h1>

      <a href="/new">Add a message</a>

      <div class="message-container">
        <% messages.forEach((message, index) => { %>
        <div class="card">
          <h3><%= message.user %></h3>
          <p><%= message.text %></p>
          <p><%= message.added.toLocaleString() %></p>
          <a href="/message/<%= index %>" class="btn-view-msg">View message</a>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
